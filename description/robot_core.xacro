<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

<launch>
    <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher"/>
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" output="screen"/>
</launch>

    <!-- <xacro:include filename="inertial_macros.xacro"/> -->



    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="yellow">
        <color rgba="0.94 0.79 0.09 1"/>
    </material>


    <!-- BASE LINK -->

    <link name="base_link">

    </link>

    <!-- BODY LINK -->

    <joint name="body_joint" type="fixed">
        <parent link="base_link"/>
        <child link="body_link"/>
        <origin xyz="0 0 0.02"/>
    </joint>

    <link name="body_link">
        <visual>
            <origin xyz="0.135 0 0.05"/>
            <geometry>
                <box size="0.27 0.1 0.1"/>
            </geometry>
            <material name="yellow"/>
        </visual>
        <collision>
            <origin xyz="0.135 0 0.05"/>
            <geometry>
                <box size="0.27 0.1 0.1"/>
            </geometry>
        </collision>
        <!-- <xacro:inertial_box mass="0.5" x="0.27" y="0.1" z="0.1"> -->
            <!-- <origin xyz="0.13 0 0.05" rpy="0 0 0"/>
        </xacro:inertial_box> -->
    </link>

    <!-- CAMERA BASE LINK -->

    <joint name="camera_base_joint" type="fixed">
        <parent link="body_link"/>
        <child link="camera_base_link"/>
        <origin xyz="0.1 0 0.1"/>
    </joint>

    <link name="camera_base_link">
        <visual>
            <origin xyz="0.0275 0 0.0075"/>
            <geometry>
                <box size="0.055 0.035 0.015"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0.0275 0 0.0075"/>
            <geometry>
                <box size="0.055 0.035 0.015"/>
            </geometry>
        </collision>
        <!-- <xacro:inertial_box mass="0.5" x="0.27" y="0.1" z="0.1"> -->
            <!-- <origin xyz="0.13 0 0.05" rpy="0 0 0"/>
        </xacro:inertial_box> -->
    </link>

    <!-- CAMERA BODY LINK -->

    <joint name="camera_body_joint" type="fixed">
        <parent link="camera_base_link"/>
        <child link="camera_body_link"/>
        <origin xyz="0.035 0 0.015"/>
    </joint>

    <link name="camera_body_link">
        <visual>
            <origin xyz="0.01 0 0.0175"/>
            <geometry>
                <box size="0.02 0.075 0.035"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="0.01 0 0.0175"/>
            <geometry>
                <box size="0.02 0.075 0.035"/>
            </geometry>
        </collision>
        <!-- <xacro:inertial_box mass="0.5" x="0.27" y="0.1" z="0.1"> -->
            <!-- <origin xyz="0.13 0 0.05" rpy="0 0 0"/>
        </xacro:inertial_box> -->
    </link>


    <!-- LEFT REAR WHEEL LINK -->

    <joint name="left_rear_wheel_joint" type="continuous">
        <parent link="body_link"/>
        <child link="left_rear_wheel"/>
        <origin xyz="0.05 -0.05 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_rear_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.02" length="0.01"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.02" length="0.01"/>
            </geometry>
        </collision>
    </link>

    <!-- RIGHT REAR WHEEL LINK -->

    <joint name="right_rear_wheel_joint" type="continuous">
        <parent link="body_link"/>
        <child link="right_rear_wheel"/>
        <origin xyz="0.05 0.05 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_rear_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.02" length="0.01"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.02" length="0.01"/>
            </geometry>
        </collision>
    </link>

    <!-- LEFT FRONT STAND LINK-->

    <joint name="left_front_stand_joint" type="revolute">
        <parent link="body_link"/>
        <child link="left_front_stand_link"/>
        <origin xyz="0.22 0.04 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 1 0"/>
        <limit effort="1000.0" lower="-${pi/4}" upper="${pi/4}" velocity="0.5"/>
    </joint>

    <link name="left_front_stand_link">
        <visual>
            <origin xyz="0 0 0.005"/>
            <geometry>
                <cylinder radius="0.002" length="0.01"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.002" length="0.01"/>
            </geometry>
        </collision>
    </link>

    <!-- RIGHT FRONT STAND LINK -->

    <joint name="right_front_stand_joint" type="revolute">
        <parent link="body_link"/>
        <child link="right_front_stand_link"/>
        <origin xyz="0.22 -0.04 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 1 0"/>
        <limit effort="1000.0" lower="${pi/4}" upper="-${pi/4}" velocity="0.5"/>
    </joint>

    <link name="right_front_stand_link">
        <visual>
            <origin xyz="0 0 0.005"/>
            <geometry>
                <cylinder radius="0.002" length="0.01"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.002" length="0.01"/>
            </geometry>
        </collision>
    </link>

    <!-- LEFT FRONT WHEEL LINK -->

    <joint name="left_front_wheel_joint" type="continuous">
        <parent link="left_front_stand_link"/>
        <child link="left_front_wheel"/>
        <origin xyz="0 0 0.01" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_front_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.02" length="0.01"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.02" length="0.01"/>
            </geometry>
        </collision>
    </link> 

    <!-- RIGHT FRONT WHEEL LINK -->

    <joint name="right_front_wheel_joint" type="continuous">
        <parent link="right_front_stand_link"/>
        <child link="right_front_wheel"/>
        <origin xyz="0 0 0.01" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="right_front_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.02" length="0.01"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.02" length="0.01"/>
            </geometry>
        </collision>
    </link> 

</robot>
<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <!-- <xacro:include filename="inertial_macros.xacro"/> -->

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="yellow">
        <color rgba="0.94 0.79 0.09 1"/>
    </material>


    <!-- BASE LINK -->

    <link name="base_link">

    </link>

    <!-- BODY LINK -->

    <joint name="body_joint" type="fixed">
        <parent link="base_link"/>
        <child link="body"/>
        <origin xyz="0.05 0 0"/>
    </joint>

    <link name="body">
        <visual>
            <origin xyz="-0.135 0 0.05"/>
            <geometry>
                <box size="0.27 0.1 0.1"/>
            </geometry>
            <material name="yellow"/>
        </visual>
        <collision>
            <origin xyz="0 0 0"/>
            <geometry>
                <box size="0.27 0.1 0.1"/>
            </geometry>
        </collision>
        <!-- <xacro:inertial_box mass="0.5" x="0.27" y="0.1" z="0.1"> -->
            <!-- <origin xyz="0.13 0 0.05" rpy="0 0 0"/>
        </xacro:inertial_box> -->
    </link>

    <!-- LEFT REAR WHEEL LINK -->

    <joint name="left_rear_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_rear_wheel"/>
        <origin xyz="0 -0.05 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_rear_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.02" length="0.01"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.02" length="0.01"/>
            </geometry>
        </collision>
    </link>

    <!-- RIGHT REAR WHEEL LINK -->

    <joint name="right_rear_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_rear_wheel"/>
        <origin xyz="0 0.05 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_rear_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.02" length="0.01"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.02" length="0.01"/>
            </geometry>
        </collision>
    </link>

